{
	"build": {
		"dockerfile": "Dockerfile"
	},
	"forwardPorts": [3000],
	"name": "Flutter",
	"customizations": {
		"vscode": {
			"extensions": [
				"Dart-Code.dart-code",
				"Dart-Code.flutter"
			]
		}
	},
	"portsAttributes": {
		"3000": {
			"label": "Application",
			"onAutoForward": "openBrowser"
		}
	},
	"postCreateCommand": "dart --disable-analytics && flutter pub get && flutter create --platforms=web,linux .",
	"postStartCommand": "flutter run -d web-server --web-hostname 0.0.0.0 --web-port 3000"
}
